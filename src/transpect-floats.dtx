    \tp@test@caption{0}{capt}{top}%
    \tp@test@caption{0}{capt}{bottom}%
    \tp@flt@create@counters%
    \tp@flt@compose
    \tp@set@bot@sep
    \tp@e@float
    \ifx\tp@fps\@empty\else\spewnotes\fi
  \endgroup
  \global\let\tp@current@class\relax
}
