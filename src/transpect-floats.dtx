\def\tp@flt@compose{%
  \hsize\tp@total@flt@width
  \ifx\tp@has@capt@top\relax
    \expandafter\ifx\csname tp@\tp@captype @attr@sidecap\endcsname\relax\relax
      \tp@make@full@caption{top}%
    \else
