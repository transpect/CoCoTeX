      \tpUseProperty{float-block}%
    \else
      \expandafter\tp@subflt@sep=\tpUseProperty{sub-float-sep}\relax%
      \tpIfProp{subfloat-same-height}
        {\tp@flt@process@sameheight}
        {\tp@flt@process@sub}%
    \fi
  \egroup
