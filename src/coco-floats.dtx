\def\ccf@create@counter{%
  \ifnum\tpSubFloatCnt>\z@\relax\let\ccf@is@subfloat\relax\fi
  \ccIfAttrIsSet{\tp@captype}{nonumber}{}
    {\ccUnlessComp{Number}
      {\ccIfPropVal{numbering}{auto}
        {\ccIfAttr{\tp@captype}{subfloat}
          {\ifnum\tpSubFloatCnt=\z@\relax
             \ccf@set@top@counter%
           \else
             \ccf@set@subcounter%
           \fi}
          {\ccf@set@top@counter}}{}}}%
}
