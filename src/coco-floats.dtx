    \@cc@is@finalfalse
    \ccf@calc@sameheight
    \def\ccf@prefix{sub}%
    \ifx\ccf@has@subcapt@top\@empty\ccf@calc@row@ht{top}\fi%
    \ifx\ccf@has@subcapt@bottom\@empty\ccf@calc@row@ht{bottom}\fi%
    \@cc@is@finaltrue
    \ccUseProperty{subfloat-render}%
    \let\ccf@prefix\@empty
  \fi
  \ccf@make@outer@caption{bottom}%
}
