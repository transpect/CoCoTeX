    \advance\tp@flt@marg@l\tp@flt@marg@i
    \advance\tp@flt@marg@r\tp@flt@marg@o
  \else
    \advance\tp@flt@marg@l\tp@flt@marg@o
    \advance\tp@flt@marg@r\tp@flt@marg@i
