%    \begin{macrocode}
\DeclareOptionX{endnotes}{\PassOptionsToPackage{\CurrentOption}{coco-notes}}
%    \end{macrocode}
% The switch \lstinline{ennotoc} triggers headings in the Endnotes
% area to \textit{not} appear in the table of contents (read:
